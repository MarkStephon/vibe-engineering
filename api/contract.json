[
  {
    "endpoint": "/api/v1/insights",
    "method": "GET",
    "description": "获取当前用户的笔记列表，按时间维度（今日/昨日/更早）分组返回，支持搜索过滤。",
    "request": {
      "query": {
        "limit": "number (default: 50)",
        "offset": "number (default: 0)",
        "search": "string (optional keyword)"
      }
    },
    "response": {
      "data": {
        "today": [
          {
            "id": "number",
            "source_type": "youtube | twitter | podcast",
            "title": "string",
            "author": "string",
            "thumbnail_url": "string",
            "status": "pending | processing | completed | failed",
            "created_at": "ISO8601 string"
          }
        ],
        "yesterday": "Array<InsightItem>",
        "previous": "Array<InsightItem>"
      },
      "total": "number"
    },
    "errors": [
      {
        "code": "UNAUTHORIZED",
        "message": "User not logged in"
      }
    ]
  },
  {
    "endpoint": "/api/v1/insights",
    "method": "POST",
    "description": "提交一个新的 URL 进行 AI 解析任务",
    "request": {
      "source_url": "string",
      "target_lang": "string (e.g., 'zh', 'en')"
    },
    "response": {
      "id": "number",
      "status": "pending",
      "message": "string"
    },
    "errors": [
      {
        "code": "INVALID_URL",
        "message": "Unsupported or invalid URL format"
      },
      {
        "code": "RATE_LIMIT_EXCEEDED",
        "message": "Too many requests"
      },
      {
        "code": "INTERNAL_ERROR",
        "message": "Failed to initialize parsing task"
      }
    ]
  }
]